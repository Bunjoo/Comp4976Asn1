        <dt>
            @Html.DisplayNameFor(model => model.FK_YearTermId.Term)
        </dt>

        <dd>
            @if (Model.FK_YearTermId.Term == 10)
            {
                @("Winter "+ Model.FK_YearTermId.Year)
            }
